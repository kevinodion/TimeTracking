@model EmployeeTimeLogModel

<div class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" id="deleteEmployeeTimeLog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <h1>Are you sure you want to delete record for @Model.EmployeeName</h1>
                <form method="post" asp-route-id="@Model.ID" asp-page-handler="Delete" onsubmit="return deleteTimeLog(this);">
                    <div class="form-group">
                        <label>Employee Name</label>
                        <input type="text" disabled class="form-control" asp-for="EmployeeName" />
                    </div>
                    <button type="submit" class="btn btn-primary float-right">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>