@model EmployeeTimeLogModel

<div class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" id="editEmployeeTimeLog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-route-id="@Model.ID" asp-page-handler="Update" onsubmit="return updateTimeLog(this);">
                    <div class="form-group">
                        <label>Employee Name</label>
                        <input type="text" class="form-control" asp-for="EmployeeName" />
                        <span class="mb-0 text-sm text-danger" asp-validation-for="EmployeeName"></span>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>Clock-in Time</label>
                            <input type="datetime-local" class="form-control" asp-for="ClockInTime" />
                            <span class="mb-0 text-sm text-danger" asp-validation-for="ClockInTime"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Clock-out Time</label>
                            <input type="datetime-local" class="form-control" asp-for="ClockOutTime" />
                            <span class="mb-0 text-sm text-danger" asp-validation-for="ClockOutTime"></span>
                        </div>
                        <div class="form-group col-md-4 mt-4" style="text-align: center;">
                            <input class="form-check-input" type="checkbox" asp-for="IsActive" id="isActive">
                            <label class="form-check-label" for="isActive">
                                Active?
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary float-right">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>